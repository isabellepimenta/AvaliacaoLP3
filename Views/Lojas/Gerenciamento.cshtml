@model List<Avaliacao.Models.LojasViewModel>

@{
    ViewData["Title"] = "Gerenciamento";
}
    
<h1>Gerenciamento</h1>
    
@if(!(Model.Count == 0))
{
    <hr>
    @foreach(var loja in Model)
    {
    <h1>@loja.Nome</h1>
        <a href="Apagar/@loja.Id">Apagar</a>
        <a href="Detalhar/@loja.Id">Detalhe</a>
    <hr>
    }
}
else
{
    <p>Nenhum registro!</p>
}